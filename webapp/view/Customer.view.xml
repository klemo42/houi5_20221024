<mvc:View controllerName="at.clouddna.training00.zhoui5.controller.Customer" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" displayBlock="true" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <Page id="page" title="{i18n>customer.page.title}">
        <content>
            <f:SimpleForm
                id="customer_simpleform_customer"
                editable="true"
                layout="ResponsiveGridLayout"
                title="{i18n>customer.page.title}"
                labelSpanXL="2"
                labelSpanL="3"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="6"
                emptySpanL="4"
                emptySpanM="2"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <f:content>
                    <core:Title text="{i18n>customer.personalData}" />
                    <Label id="customer_label_customerid" text="{i18n>customer.customerID}" labelFor="customer_input_customerid" />
                    <Input id="customer_input_customerid" value="{/customerid}" placeholder="{i18n>customer.customerID}" />
                    <Label id="customer_label_firstname" text="{i18n>customer.firstName}" labelFor="customer_input_firstname" />
                    <Input id="customer_input_firstname" value="{/firstname}" />
                    <Label id="customer_label_lastname" text="{i18n>customer.lastName}" labelFor="customer_input_lastname" />
                    <Input id="customer_input_lastname" value="{/lastname}" />
                    <Label id="customer_label_title" text="{i18n>customer.title}" labelFor="customer_input_title" />
                    <Input id="customer_input_title" value="{/title}" />
                    <Label id="customer_label_gender" text="{i18n>customer.gender}" labelFor="customer_select_gender" />
                    <Select id="customer_select_gender" selectedKey="{/gender}" items="{genderModel>/genders}">
                        <items>
                            <core:Item key="{genderModel>}" text="{path: 'genderModel>', formatter: '.genderFormatter'}"/>
                        </items>
                    </Select>
                    <core:Title text="{i18n>customer.contactInfo}" />
                    <Label id="customer_label_email" text="{i18n>customer.email}" labelFor="customer_input_email" />
                    <Input id="customer_input_email" value="{/email}" />
                    <Label id="customer_label_phone" text="{i18n>customer.phone}" labelFor="customer_input_phone" />
                    <Input id="customer_input_phone" value="{/phone}" />
                    <Label id="customer_label_website" text="{i18n>customer.website}" labelFor="customer_input_website" />
                    <Input id="customer_input_website" value="{/website}" />
                </f:content>
            </f:SimpleForm>
        </content>
    </Page>
</mvc:View>
